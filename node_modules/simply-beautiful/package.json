{
  "name": "simply-beautiful",
  "version": "1.0.1",
  "description": "Beautify HTML, JS, CSS, and JSON in the browser or in Node.js!",
  "main": "dist/index.js",
  "scripts": {
    "test": "npm run prepare && ./node_modules/mocha/bin/mocha test/ --recursive --timeout=10000",
    "prepare": "node -e \"require('prepare-package')()\"",
    "prepare:watch": "nodemon -w ./src -e '*' --exec 'npm run prepare'"
  },
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itw-creative-works/simply-beautiful"
  },
  "keywords": [
    "beautify",
    "beautify-js",
    "beautify-json",
    "pretty-print",
    "pretty",
    "prettify",
    "beautify-css",
    "beautify-html",
    "html",
    "json",
    "css",
    "js",
    "javascript"
  ],
  "author": "ITW Creative Works",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/itw-creative-works/simply-beautiful/issues"
  },
  "homepage": "https://itwcreativeworks.com",
  "preparePackage": {
    "input": "./src",
    "output": "./dist",
    "replace": {}
  },
  "dependencies": {
    "itwcw-package-analytics": "^1.0.4"
  },
  "devDependencies": {
    "fs-jetpack": "^4.3.1",
    "mocha": "^8.4.0",
    "prepare-package": "^1.1.12"
  }
}